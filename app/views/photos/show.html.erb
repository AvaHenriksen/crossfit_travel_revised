<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><img src="<%= @photo.image %>" class="img-responsive"></dd>

      <dt>Location</dt>
      <dd>
          <a href="/locations/<%= @photo.location_id %>">
            <%= @photo.location.name %>
          </a>
      </dd>

      <dt>Uploaded by</dt>
      <dd>
      <%= @photo.user.username %>
      </a>
      </dd>

      <dt>Caption</dt>
      <dd><%= @photo.caption %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/locations/<%=@photo.location.id%>" class="btn btn-primary">
        Back
      </a>
      <% if current_user.id == @photo.user_id || current_user.admin? ==true %>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% else %>
      <% end %>
    </div>
  </div>
</div>
