<div class="page-header">
  <h1>
    Bookmarks
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% current_user.bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <% if bookmark.location.present? %>
            <a href="/locations/<%= bookmark.location.id %>">
              <%= bookmark.location.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if current_user == bookmark.user %>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
