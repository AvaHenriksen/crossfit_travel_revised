<div class="page-header">
  <h3><%= @location.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @location.name %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Website</dt>
      <dd><%= @location.website%> </dd>

      <dt>Details</dt>
      <dd><%= @location.details %></dd>

      <dt>City</dt>
      <dd>
        <% if @location.city.present? %>
          <a href="/cities/<%= @location.city_id %>">
            <%= @location.city.name %>
          </a>
        <% end %>
      </dd>

      <dt>Category</dt>
      <dd><%= @location.category %></dd>

    </dl>
    <div class="row">
      <div class="col-md-12">
        <ul class="list-group">

          <li class="list-group-item">
    <div class="btn-group btn-group-justified">
      <a href="/locations" class="btn btn-primary">
        Back
      </a>
      <% if current_user.admin? == true %>
      <a href="/locations/<%= @location.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_location/<%= @location.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% else %>
      <% end %>
    </div>
  </div>
</div>
</li>
</ul>
</div>
</div>

<!-- A Location has many bookmarks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">

      <li class="list-group-item">
        <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for location_id -->
      <input type="hidden" name="location_id" value="<%= @location.id %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for location_name -->
      <input type="hidden" name="name" value="<%= @location.name %>">

      <button class="btn btn-block btn-success">
        Bookmark this location
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Location has many comments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Comments
      </li>

      <% @location.comments.each do |comment| %>
        <li class="list-group-item">
          <p><%=comment.user.username%>:</p>
          <a href="/comments/<%= comment.id %>">
            <%= comment.body %>
          </a>
          <small>
            <%=time_ago_in_words(comment.created_at)%> ago
            </small>
          <div class="btn-group btn-group-xs pull-right">
              <% if current_user.id == comment.user_id %>
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
            <%else%>
            <% end %>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <input type="text" id="body" name="body" placeholder="Body" class="form-control" value="">
      </div>

      <!-- Label and input for location_id -->
      <input type="hidden" name="location_id" value="<%= @location.id %>">
      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-block btn-success">
        Create Comment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Location has many photos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Photos
      </li>

      <% @location.photos.each do |photo| %>
      <li class="list-group-item">
      <div>
        <%= photo.caption %>
      </div>
      <div class "location_photo">
          <a href = "/photos/<%=photo.id%>"> <img src ="<%=photo.image%>"> </a>
      </div>
      </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_photo" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for location_id -->
      <input type="hidden" name="location_id" value="<%= @location.id %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="control-label">
          Caption
        </label>

        <input type="text" id="caption" name="caption" placeholder="Caption" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Add a Photo
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Location has many visitors -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Visitors
      </li>

      <% @location.visitors.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.username %>
          </a>
          <% if current_user.admin? == true %>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
          <% else %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @location.address_latitude %>,
        "lng": <%= @location.address_longitude %>,
        "infowindow": "<h5><%= @location.created_at %></h5><small><%= @location.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
